<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory android:title="设置">
                <Preference
                    android:key="cs_cache"
                    android:title="缓存位置"
                    android:summary="选择你的「阅读」缓存目录" />

                <Preference
                    android:key="cs_backup"
                    android:title="备份位置"
                    android:summary="选择你的「阅读」备份目录" />

                <Preference
                    android:key="cs_out"
                    android:title="导出位置"
                    android:summary="选择要输出 txt 文档的目录"/>

        </PreferenceCategory>

        <PreferenceCategory android:title="试验性功能">

                <SwitchPreference
                    android:key="cs_auto_merge"
                    android:title="书籍合并"
                    android:defaultValue="false"
                    android:summary="同一书籍自动合并来自不同源的章节"/>

                <SwitchPreference
                    android:key="cs_merge_mode"
                    android:title="激进模式"
                    android:dependency="cs_auto_merge"
                    android:defaultValue="false"
                    android:summary="是否以激进模式合并不同来源，不建议开启"/>

        </PreferenceCategory>

        <PreferenceCategory android:title="关于">
                <Preference
                    android:key="ab_id"
                    android:title="作者"
                    android:summary="沚水@酷安" />
                <Preference
                    android:key="ab_code"
                    android:title="开源地址"
                    android:summary="https://github.com/zsakvo"/>
        </PreferenceCategory>

</PreferenceScreen>